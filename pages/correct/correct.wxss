/* pages/takePhoto/takePhoto.wxss */

page {
  height: 100%;
}

.body {
  position: absolute;
  width: 100vw;
  height: calc(100vw / 1140 * 1170);
  /* left: 5vw; */
  bottom: 8%;
}


.background {
  height: 100%;
  width: 100%;
  background-color: rgb(0, 0, 0);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.camera{
  width:100%; 
  height:80%;
  position: absolute;
  top:0;
}

.frame {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 125%;
  z-index: 1;
  /* overflow: auto; */
}

.white {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 2255, 255, 0.56);
  z-index: 0;
}


.remind-text {
  position: absolute;
  bottom: 14%;
  text-align: center;
  font-size: 16px;
  font-weight: bold; 
  color: rgb(237,220,85);
}

.switch {
  width: 48px;
  height: 48px;
  margin-bottom: 10px;
  position:fixed;
  bottom: 1%;
  left: 10%;
}

.next_btn {
  display: inline-block;
  width: 45%;
  position: fixed;
  bottom:2%;
}
